<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="50dp"
    android:orientation="vertical">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/reView_BinhLuan"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="48dp" />

    <TableRow
        android:id="@+id/tbr_BinhLuan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:weightSum="1">

        <EditText
            android:id="@+id/edtNoiDung_BinhLuan"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_weight="0.8"
            android:background="@android:drawable/editbox_background"
            android:ems="10"
            android:inputType="textMultiLine"
            android:lines="2"
            android:maxLines="10"
            android:scrollbars="vertical" />

        <Button
            android:id="@+id/btnGuiBL_BinhLuan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_weight="0.15"
            android:background="@android:drawable/ic_menu_send" />

    </TableRow>

    <TableRow
        android:id="@+id/tbr_NoUser_BinhLuan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:visibility="gone"
        android:weightSum="1">

        <TextView
            android:id="@+id/textView42"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Vui lòng đăng nhập để có thể bình luận"
            android:textSize="18sp" />
    </TableRow>

</RelativeLayout>